<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.beidou.tree.mapper.UserMapper">
    <select id="selectAll" resultType="com.beidou.tree.entity.User">
        select * from user
    </select>
    <select id="selectById" resultType="com.beidou.tree.entity.User">
        select * from user where id = #{id}
    </select>
    <select id="selectByName" resultType="com.beidou.tree.entity.User">
        select * from user where  name = #{username}
    </select>
</mapper>